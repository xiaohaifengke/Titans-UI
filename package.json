    "@titans-ui/utils": "workspace:^0.3.0"
  },
  "lint-staged": {
    "(packages|story)/**/*.vue": [
      "stylelint --fix",
      "prettier --write",
      "eslint"
    ],
    "(packages|story)/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint"
    ],
    "(packages|story)/**/*.((s(c|a)|c)ss)": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
