    "gulp": "^4.0.2",
    "husky": "7.0.1",
    "lint-staged": "11.1.2",
    "prettier": "2.4.1",
    "sass": "^1.43.4",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-recess-order": "2.5.0",
