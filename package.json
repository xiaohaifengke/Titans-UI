{
  "private": true,
  "packageManager": "pnpm@6.23.1",
  "version": "0.4.0",
  "description": "前端自研组件库",
  "engines": {
    "node": ">= 16.9.1"
  },
  "scripts": {
    "dev": "pnpm -C story docs:dev",
    "build": "gulp -f build/gulpfile.ts",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "cz": "git-cz",
    "version": "gulp -f build/update-version.ts && conventional-changelog -p angular -i CHANGELOG.md -s && git add .",
    "postversion": "pnpm run build",
    "docs:dev": "vitepress-rc && vitepress dev docs",
    "docs:build": "vitepress-rc && vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@commitlint/load": "13.1.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@types/gulp": "^4.0.9",
    "@types/gulp-autoprefixer": "^0.0.33",
    "@types/gulp-clean-css": "^4.3.0",
    "@types/gulp-sass": "^5.0.0",
    "@types/node": "^17.0.17",
    "@types/sass": "^1.43.0",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "@vue/compiler-sfc": "^3.2.23",
    "@vue/eslint-config-prettier": "6.0.0",
    "@vue/eslint-config-typescript": "5.1.0",
    "autoprefixer": "^10.4.0",
    "chalk": "^4.1.2",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-vue": "7.18.0",
    "fast-glob": "^3.2.7",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-replace": "^1.1.3",
    "gulp-sass": "^5.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "7.0.1",
    "lint-staged": "11.1.2",
    "prettier": "2.4.1",
    "rollup": "^2.60.1",
    "rollup-plugin-typescript2": "^0.31.1",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.43.4",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-recess-order": "2.5.0",
    "stylelint-config-standard": "22.0.0",
    "stylelint-scss": "3.21.0",
    "stylelint-webpack-plugin": "3.0.1",
    "sucrase": "^3.20.3",
    "ts-morph": "^13.0.2",
    "typescript": "^4.5.2",
    "vitepress": "^0.21.6",
    "vitepress-theme-demoblock": "^1.4.2",
    "vue": "^3.2.22"
  },
  "dependencies": {
    "@popperjs/core": "^2.10.2",
    "@titans-ui/components": "workspace:^0.4.0",
    "@titans-ui/directives": "workspace:^0.4.0",
    "@titans-ui/theme-chalk": "workspace:^0.4.0",
    "@titans-ui/use": "workspace:^0.4.0",
    "@titans-ui/utils": "workspace:^0.4.0",
    "dayjs": "^1.10.7",
    "screenfull": "5.1.0",
    "titans-ui": "workspace:^0.4.0"
  },
  "lint-staged": {
    "(packages|story)/**/*.vue": [
      "stylelint --fix",
      "prettier --write",
      "eslint"
    ],
    "(packages|story)/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint"
    ],
    "(packages|story)/**/*.((s(c|a)|c)ss)": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
